// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CaseStudy {
  id           String      @id @default(uuid())
  title        String
  slug         String      @unique
  client       String
  description  String      // Descripción corta para listados
  description2 String      // Descripción larga para página detalle
  mediaItems   MediaItem[]
  tags         String      // Almacenamos los tags como string separado por comas
  order        Int         @default(0)
  status       String      @default("draft") // "draft" | "published"
  featured     Boolean     @default(false)
  featuredOrder Int        @default(999)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model MediaItem {
  id          String    @id @default(uuid())
  type        String    // "image" | "video"
  url         String
  videoType   String?   // "vimeo" | "local"
  thumbnailUrl String?
  alt         String    @default("")
  width       Int
  height      Int
  order       Int       @default(0)
  displayMode String?   // "single" | "dual" | "dual_left" | "dual_right"
  caseStudyId String
  caseStudy   CaseStudy @relation(fields: [caseStudyId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
